def main():
    num = get_height()
    for i in range(num):
        print(" " * (num - i - 1), end = "")
        print("#" * (i+1), end = "")
        print("  ", end = "")
        print("#" * (i + 1))


def get_height():
    while True:
        try:
            n = int(input("Height: "))
            if n > 0 and n < 9:
                return n
        except ValueError:
            continue


main()
